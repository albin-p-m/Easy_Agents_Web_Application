<link rel="stylesheet" href="css/view.css">
{{>header}}
<div class="container-view">
    <div class="column">
        <table>
            <thead>
                <th>ID</th>
                <th>Customer Name</th>
                <th>Phone No</th>
                <th>Pending Amount</th>
                <th>Actions</th>
            </thead>
            {{#each rows}}
            <tr>
                <td>{{this.CustomerId}}</td>
                <td>{{this.CustomerName}}</td>
                <td>{{this.CustomerPhoneNo}}</td>
                <td>{{this.PaymentAmount}}</td>
                <td>
                    <a href="/update-customer-payment/{{this.CustomerId}}" id="update">Update</a>
                    <a href="/view-customer-profile/{{this.CustomerId}}" id="view">View</a>
                </td>
            </tr>
            {{/each}}
        </table>
    </div>
</div>